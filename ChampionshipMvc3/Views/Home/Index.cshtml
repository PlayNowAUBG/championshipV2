@model IEnumerable<ChampionshipMvc3.Models.DataContext.Playfield>

@{
    ViewBag.Title = "Play Now";
}

<div id="inputForSearch">
    <div id="fyf">&nbsp<br />&nbsp<br />&nbsp</div>
    @using(Html.BeginForm("SearchPlayfieldsByCity","Playfield"))
    {   
        <div class="searchInput">
            <input name="city" type="text" class="textBoxInput"/>
        </div>
        
        <div class="buttonInput">
            <input type="submit" value=""  class="inputButton" />
        </div>
    }

    @using(Html.BeginForm("SearchPlayfieldsByName", "Playfield"))
    {  
        <div>
            <div class="searchInput">
                <input name="name" type="text" class="textBoxInput"/>
            </div>
            <div class="buttonInput">
                <input type="submit" value=""  class="inputButton"/>
            </div>    
        </div>
    }
</div>
