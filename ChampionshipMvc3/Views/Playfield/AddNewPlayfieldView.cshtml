@model ChampionshipMvc3.Models.ViewModels.PlayfieldViewModel

@{
    ViewBag.Title = "AddNewPlayfieldView";
}

<h2>Add New Playfield</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AddNewPlayfield", "Playfield", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Playfield</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.playfieldModel.FieldType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.playfieldModel.FieldType)
            @Html.ValidationMessageFor(model => model.playfieldModel.FieldType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.playfieldModel.SurfaceType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.playfieldModel.SurfaceType)
            @Html.ValidationMessageFor(model => model.playfieldModel.SurfaceType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.playfieldModel.Length)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.playfieldModel.Length)
            @Html.ValidationMessageFor(model => model.playfieldModel.Length)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.playfieldModel.Width)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.playfieldModel.Width)
            @Html.ValidationMessageFor(model => model.playfieldModel.Width)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.playfieldModel.PriceLights)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.playfieldModel.PriceLights)
            @Html.ValidationMessageFor(model => model.playfieldModel.PriceLights)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.playfieldModel.PriceNoLights)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.playfieldModel.PriceNoLights)
            @Html.ValidationMessageFor(model => model.playfieldModel.PriceNoLights)
        </div>
        
        <div>
            @Html.DropDownListFor(m => m.SelectedId, Model.ownersSelectList)
        </div>

        <input type="file" name="files" value="" multiple="multiple" />
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

