@model IEnumerable<ChampionshipMvc3.Models.DataContext.Playfield>


<table>
    <tr>
        <th>
            Playfield Name
        </th>
        <th>
            FieldType
        </th>
        <th>
            SurfaceType
        </th>
        <th>
            Length
        </th>
        <th>
            Width
        </th>
        <th>
            PriceLights
        </th>
        <th>
            PriceNoLights
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlayfieldName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FieldType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SurfaceType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Length)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Width)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceLights)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceNoLights)
        </td>
        
        <td>
            @Html.ActionLink("Details", "PlayfieldDetails", new { playfieldId=item.PLayfieldID }) |
        </td>
    </tr>
}

</table>
